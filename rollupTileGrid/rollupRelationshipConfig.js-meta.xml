<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Rollup Relationship Config</masterLabel>
    <description>
        Admin configuration screen for Rollup Tile Grid.
        Lets you choose Child / Relationship / Grandchild paths with dependent picklists,
        and saves the configuration via RollupConfigController.
    </description>
    <targets>
        <!-- You can drop this on a Record Page scoped to the same parent object
             as your Rollup Tile Grid, or on a generic App Page. -->
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
    </targets>
</LightningComponentBundle>
